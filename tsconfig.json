{
    "compilerOptions": {
      "module": "commonjs",
      "removeComments": true,
      "sourceMap": true,
      "target": "es5",
      "outDir": "build",
      "resolveJsonModule": true,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": true
    },
    "include": [
      "server/**/*.ts"
    ],
    "exclude": [
      "node_modules",
      "**/*.spec.ts"
    ]
  }